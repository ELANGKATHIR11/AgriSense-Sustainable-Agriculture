# Production Environment Configuration
# Backend API URL - Use ngrok tunnel or deployed backend
# For local testing: http://localhost:8004
# For ngrok: https://YOUR_NGROK_URL (update with your ngrok domain)
VITE_API_BASE_URL=https://localhost:8004
VITE_WS_URL=wss://localhost:8004

# Application Info
VITE_APP_NAME=AgriSense
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# NOTE: These values use HTTPS/WSS to satisfy frontend validation when
# building/running in production mode locally. If your backend is not
# serving TLS locally, prefer running the dev server with `npm run dev`
# or use `.env.development` / `.env.local` instead of `.env.production`.

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_LOGGING=true

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_ENABLE_OFFLINE_MODE=true
VITE_POUCHDB_SERVER_URL=http://localhost:5984
VITE_ENABLE_POUCHDB_SYNC=false
VITE_LOG_LEVEL=info

# Security (CRITICAL for production)
VITE_ENABLE_HTTPS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_XSRF_PROTECTION=true
VITE_ENFORCE_SECURE_COOKIES=true

# Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
