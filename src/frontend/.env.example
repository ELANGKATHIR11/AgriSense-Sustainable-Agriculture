# AgriSense Frontend Environment Configuration
# Copy this file to .env.local and adjust values as needed

# ============================================
# PouchDB Configuration (Local Database)
# ============================================
# URL of local PouchDB server for offline-first sync
VITE_POUCHDB_SERVER_URL=http://localhost:5984
# Database name in PouchDB
VITE_POUCHDB_DB_NAME=agrisense_db
# Sync interval (milliseconds)
VITE_POUCHDB_SYNC_INTERVAL=30000

# ============================================
# FastAPI Backend Configuration
# ============================================
# Base URL for FastAPI backend
VITE_BACKEND_API_URL=http://localhost:8004/api/v1
# WebSocket URL for real-time updates
VITE_BACKEND_WS_URL=ws://localhost:8004

# ============================================
# Feature Flags
# ============================================
# Enable offline-first mode (recommended: true)
VITE_ENABLE_OFFLINE_MODE=true
# Enable PouchDB real-time sync (recommended: true)
VITE_ENABLE_POUCHDB_SYNC=true
# Log level: debug, info, warn, error
VITE_LOG_LEVEL=info

# ============================================
# Firebase Configuration (Production Only)
# ============================================
# Firebase API Key
VITE_FIREBASE_API_KEY=your_firebase_api_key
# Firebase Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id
# Firebase Storage Bucket
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# Firebase App ID
VITE_FIREBASE_APP_ID=your_app_id

# ============================================
# Application Configuration
# ============================================
# App name
VITE_APP_NAME=AgriSense
# App version
VITE_APP_VERSION=1.0.0
# Environment: development, staging, production
VITE_ENV=development

# ============================================
# Optional: Azure Integration
# ============================================
# Azure OpenAI API endpoint (if using AI features)
VITE_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# Azure OpenAI API key
VITE_AZURE_OPENAI_KEY=your_azure_openai_key
# Azure Cosmos DB connection string (for cloud backend)
VITE_COSMOS_CONNECTION_STRING=your_cosmos_connection_string
