# ====================
# AgriSense Security Configuration
# ====================
# CRITICAL: This is a template. Create .env file with REAL values in production.
# NEVER commit .env with real values to version control!

# ====================
# ENVIRONMENT
# ====================
ENVIRONMENT=development
DEBUG=true

# ====================
# SECURITY: SECRETS (MUST BE CHANGED IN PRODUCTION)
# ====================
# Generate a strong secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=15

# Database encryption (optional but recommended for production)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DATABASE_ENCRYPTION_KEY=

# ====================
# DATABASE
# ====================
# Development (SQLite)
DATABASE_URL=sqlite:///./sensors.db

# Production (PostgreSQL or MongoDB)
# DATABASE_URL=postgresql://user:password@localhost/agrisense
# DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/agrisense

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ====================
# EXTERNAL APIs
# ====================
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ====================
# CORS & FRONTEND
# ====================
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# AUTHENTICATION
# ====================
# Password requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session timeouts
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ML_REQUESTS_PER_MINUTE=10

# ====================
# LOGGING & MONITORING
# ====================
LOG_LEVEL=INFO
SENTRY_DSN=
ENABLE_STRUCTURED_LOGGING=true

# ====================
# CACHING
# ====================
CACHE_BACKEND=memory
# REDIS_URL=redis://localhost:6379/0

# ====================
# ML MODELS
# ====================
AGRISENSE_DISABLE_ML=0
ML_MODEL_VERIFICATION=true

# ====================
# IoT MQTT
# ====================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC_PREFIX=agrisense/

# ====================
# FILE UPLOADS
# ====================
MAX_FILE_UPLOAD_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# ====================
# PRODUCTION HTTPS
# ====================
HTTPS_ONLY=false
SSL_CERT_PATH=
SSL_KEY_PATH=
