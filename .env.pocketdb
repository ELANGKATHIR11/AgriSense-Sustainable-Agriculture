# AgriSense Environment Configuration
# Use this file for development with PocketDB backend

# ============= Database Configuration =============
AGRISENSE_DB_BACKEND=pocketdb
POCKETDB_URL=http://localhost:8090
POCKETDB_DATA_DIR=./pb_data
POCKETDB_ADMIN_EMAIL=admin@agrisense.local
POCKETDB_ADMIN_PASSWORD=AgriSense@2024!
AGRISENSE_DB_AUTO_INIT=1
AGRISENSE_DB_MIGRATIONS=1

# ============= FastAPI Configuration =============
FASTAPI_ENV=development
LOG_LEVEL=INFO
WORKERS=1

# ============= Backend Server =============
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# ============= Frontend Configuration =============
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_POCKETDB_URL=http://localhost:8090
VITE_API_BASE_URL=http://localhost:8000
VITE_ENVIRONMENT=development

# ============= ML Configuration =============
AGRISENSE_DISABLE_ML=0

# ============= Feature Flags =============
ENABLE_ANALYTICS=false
ENABLE_WEBSOCKETS=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=false

# ============= Security (Development Only) =============
ENABLE_HTTPS=false
SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256

