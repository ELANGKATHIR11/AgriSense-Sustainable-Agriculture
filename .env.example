# ===================================================================
# Local Development Environment Variables
# Copy this to .env.local and fill in your values
# NEVER commit .env.local to git!
# ===================================================================

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=agrisenseacr
AZURE_ACR_USERNAME=your-acr-username
AZURE_ACR_PASSWORD=your-acr-password

# Azure Resource Group
AZURE_RESOURCE_GROUP=agrisense-rg

# Azure Subscription
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000

# Azure Service Principal (for deployments)
# Generate with: az ad sp create-for-rbac --name "agrisense-sp" --role contributor --scopes /subscriptions/{subscription-id} --sdk-auth
AZURE_CREDENTIALS='{"clientId":"","clientSecret":"","subscriptionId":"","tenantId":""}'

# Azure App Service
AZURE_BACKEND_APP_NAME=agrisense-backend-dev
AZURE_FRONTEND_URL=https://agrisense.azurestaticapps.net

# Static Web App
AZURE_STATIC_WEB_APPS_API_TOKEN=your-static-web-app-token

# Frontend Build
VITE_API_URL=http://localhost:8004

# SSH Deployment (Optional)
STAGING_HOST=staging.example.com
STAGING_USER=deploy
STAGING_SSH_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

PROD_HOST=prod.example.com
PROD_USER=deploy
PROD_SSH_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
